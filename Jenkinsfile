              stage('EKS-Deployment') {
            steps {
                withKubeConfig(caCertificate: '', clusterName: 'myAppp-eks-cluster', contextName: '', credentialsId: 'k8s', namespace: 'webapps', restrictKubeConfigAccess: false, serverUrl: 'https://41335EF1B20FC3AC44B951C7B719E3C2.gr7.us-east-1.eks.amazonaws.com') {
